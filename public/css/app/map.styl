@import '../../lib/mapbox/mapbox.css'

#main-map-contrainer
    fixed top 0 left 0
    right 0
    bottom 0

#map, .map
    position absolute
    top 0
    bottom 0
    width 100%

.test
    position absolute
    top 0px
    left 0px
    background-color red
    width 100px
    height 100px

icon-background-color = #000
icon-selected-background-color = #f7931e
icon-triangle-size = 12px

count-icon()
    text-align center
    vertical-align middle
    line-height 30px
    opacity 0.8

.count-icon
    count-icon()
    background icon-background-color
    color white

.count-icon::after
    content ""
    width 0
    height 0
    border-top icon-triangle-size solid icon-background-color
    border-bottom icon-triangle-size solid transparent
    border-left icon-triangle-size solid transparent
    border-right icon-triangle-size solid transparent
    position absolute
    bottom -18px
    left 50%
    margin-left -12px
    z-index 8

.count-icon-selected
    count-icon()
    opacity 1
    background icon-selected-background-color
    color icon-background-color

.count-icon-selected::after
    content ""
    width 0
    height 0
    border-top icon-triangle-size solid icon-selected-background-color
    border-bottom icon-triangle-size solid transparent
    border-left icon-triangle-size solid transparent
    border-right icon-triangle-size solid transparent
    position absolute
    bottom -18px
    left 50%
    margin-left -12px
    z-index 8

.map-pin-out
    text-align center
    vertical-align middle
    border-radius 20px
    line-height 30px
    position absolute
    padding 6px 8px
    color icon-selected-background-color
    background-color icon-background-color
    width 40px
    height 40px

