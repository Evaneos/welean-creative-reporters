
#viewer
    padding 0
    margin 0
    overflow none

    .modal-dialog
        padding 0
        margin 0

        absolute top 0 left 0
        bottom 0
        right 0
        width 100%
        background rgba(0, 0, 0, .8)
        overflow none

        > .modal-content
            box-shadow none
            border none
            background-clip none
            background #000
            background rgba(0, 0, 0, .6)
            background-size 100%
            background-size cover !important
            absolute top 0 left 0
            bottom 0
            right 0

            > .modal-body
                box-shadow none
                border none
                background-clip none
                background #000
                background rgba(0, 0, 0, .6)
                background-size 100%
                background-size cover !important
                absolute top 0 left 0
                bottom 0
                right 0

                cursor pointer
        .close
            font-size 50px
            margin-right 5px
            opacity 0.5
            font-family arial, sans-serif
        i.previous, i.next
            font-size 60px
            color white
            opacity 0.7
            cursor pointer
            &:hover
                opacity 1
        i.previous
            absolute top 50% left 0
        i.next
            absolute top 50% right 0